{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "files.exclude": {
    "**/.git": true,
    "node_modules/": true
  },
  /* -------------------------------------------------------------------------- */
  /*                                   linter                                   */
  /* -------------------------------------------------------------------------- */
  // "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ]
}